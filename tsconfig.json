{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Changed to node, which is more common
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Changed to react-jsx for better React compatibility
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/hooks/useUser.js", "src/components/ProtectedRoute.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
